<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="@dimen/standard_toolbar_height"
    android:background="?attr/colorPrimary">

    <ImageView
        android:id="@+id/dialog_fullscreen_title_zone_dismiss_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:contentDescription="@string/content_description_close_button"
        android:focusable="true"
        android:padding="@dimen/single_and_quarter_margin"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_cross" />

    <TextView
        android:id="@+id/dialog_fullscreen_title_zone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/toolbar_standard_title_size"
        android:textStyle="bold"
        tools:text="Session Preset Dialog" />

    <ImageView
        android:id="@+id/dialog_fullscreen_title_zone_validate_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:contentDescription="@string/content_description_validate_dialog"
        android:focusable="true"
        android:padding="@dimen/single_and_quarter_margin"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_check" />

</RelativeLayout>