<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.EveryDay" parent="Base.Theme.EveryDay">
        <!--Material color attributes (dark theme) -->
        <item name="colorPrimary">@color/teal_300</item>
        <item name="colorPrimaryVariant">@color/teal_600</item>
        <item name="colorSecondary">@color/amber_500</item>
        <item name="colorSecondaryVariant">@color/amber_800</item>
        <item name="android:colorBackground">@color/grey_900</item>
        <item name="colorSurface">@color/grey_800</item>
        <item name="colorError">@color/red_200</item>
        <item name="colorOnPrimary">@color/grey_50</item>
        <item name="colorOnSecondary">@color/grey_900</item>
        <item name="colorOnBackground">@color/grey_50</item>
        <item name="colorOnSurface">@color/grey_50</item>
        <item name="colorOnError">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
    </style>

    <style name="TimePickerWidgetStyle" parent="@android:style/Widget.Material.TimePicker">
        <!--empty overwriting here, the default dark version of the TimePicker is Ok-->
    </style>
</resources>